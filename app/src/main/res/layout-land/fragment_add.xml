<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddFragment">

    <LinearLayout
        android:id="@+id/ll_main_layout_add_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/workoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/workout_name"/>
        <EditText
            android:id="@+id/workoutTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/workout_time"/>
        <EditText
            android:id="@+id/workoutCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/workout_calories"/>
        <EditText
            android:id="@+id/workoutMachines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/workout_machine"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>